<div>
  <div class="banner">
    <h1 class="p-3 mb-0">New game</h1>
  </div>
  <div class="cards d-flex flex-row justify-content-between p-3">
    <% @letters.each do |letter| %>
      <div class="card p-1 alert-primary border-dark">
        <p class="text-center my-1 align-middle px-3 py-1"><b><%= letter.upcase %></b></p>
      </div>
    <% end  %>
  </div>
  <div class="form p-3">
    <p>What is the longest word you can find?</p>
    <form action="score" method="POST" data-turbo="false">
      <!-- ... -->
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="word">
      <input type="submit" value="Play">
      <input type="hidden" name="letters">
      <%= hidden_field_tag 'letters', @letters %>
    </form>
  </div>
</div>
